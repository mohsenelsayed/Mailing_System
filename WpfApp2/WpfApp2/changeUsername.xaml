<Window x:Class="WpfApp2.changeUsername"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="Username" Height="150" Width="250">
    <StackPanel>
        <TextBlock FontWeight="Bold">Change Name</TextBlock>
        <TextBlock Text="User Name"></TextBlock>
        <TextBox Name="username"></TextBox>
        <DockPanel HorizontalAlignment="Right">
            <Button Margin="10" Width="70" Background="red" Click="Button_cancel">Cancel</Button>
            <Button Margin="10" Width="70" Background="Green" Click="Button_update">Done</Button>
        </DockPanel>
    </StackPanel>
</Window>
