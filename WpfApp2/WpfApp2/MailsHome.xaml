<Window x:Class="WpfApp2.MailsHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MailsHome" Height="1050" Width="1400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="4*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Width="auto">
            <Button Click="Button_New">New Message</Button>
            <Button Click="Button_inbox">Inbox</Button>
            <Button>Spam</Button>
            <Button>Trash</Button>
            <Button Click="Button_Sent">Sent</Button>
        </StackPanel>
        <DataGrid Name="dg" Grid.Column="1" IsReadOnly="True">

        </DataGrid>
        <TextBlock Name="msgs" HorizontalAlignment="Left" Margin="219,101,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
